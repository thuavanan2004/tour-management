extends ../../layouts/default 
block main 
  .section-intro-tours 
    .box-content
      h3.inner-sub-title Search Tour 
      h2.inner-title Travel With Us  
  .section-tours 
    .container 
      .box-main
        .filter-sort 
          .sort-item 
            i(class="fa-regular fa-calendar")
            span() Date 
          .sort-item 
            i(class="fa-solid fa-arrow-up-wide-short")
            span Price Low to High 
          .sort-item 
            i(class="fa-solid fa-arrow-down-wide-short")
            span Price High to Low 
          .sort-item 
            i(class="fa-regular fa-pen-to-square")
            span Name(A- Z)
        .tour-main 
          .row  
            .col-md-8.col-12
              .list-tour
                .row 
                  .col-4 
                    .tour-item 
                      .box-head 
                        .inner-img 
                          img(src="/client/images/tour-1.png")
                        .inner-information 
                          .inner-date 
                            i(class="fa-regular fa-calendar")
                            span 12, September 2022
                          .inner-quantity-people 
                            i(class="fa-solid fa-users")
                            span 120+ People
                      .box-content 
                        h4.inner-title Switzerland
                        p.inner-desc  Qui tempore voluptate qui quia commodi rem praesentium alias et.
                      .box-footer 
                        span.inner-price $ 1.100
                        .inner-rating 
                          i(class="fa-solid fa-star")
